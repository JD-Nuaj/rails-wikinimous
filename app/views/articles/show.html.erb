<h1 class="text-center my-4"><%= @article.title %></h1>

<p class="lead text-center"><%= @article.content %></p>

<div class="text-center">
  <%= link_to 'Back to Articles', articles_path, class: 'btn btn-secondary mb-2' %>
  <%= link_to 'Edit article', edit_article_path(@article), class: 'btn btn-warning mb-2' %>
  <%= link_to "Delete article", article_path(@article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'btn btn-danger mb-2' %>
</div>
