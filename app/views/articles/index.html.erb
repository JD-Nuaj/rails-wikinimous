<h1 class="text-center my-4">Articles List</h1>

<%= link_to 'Create a new Article', new_article_path, class: 'btn btn-primary mb-4' %>

<ul class="list-group">
  <% @articles.each do |article| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= link_to article.title, article, class: 'btn btn-link' %>
      <div>
        <%= link_to 'Edit article', edit_article_path(@articles), class: 'btn btn-warning btn-sm' %>
        <%= link_to "Delete article", article_path(article), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger btn-sm' %>
      </div>
    </li>
  <% end %>
</ul>
