<h1 class="text-center my-4">Edit an Article</h1>

<%= form_with model: @article, class: 'w-50 mx-auto' do |form| %>
  <div class="mb-3">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :content, class: 'form-label' %>
    <%= form.text_area :content, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.submit 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back to Articles', article_path(@article), class: 'btn btn-secondary' %>
